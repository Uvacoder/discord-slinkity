{% if type.flip == true %}

<section class="clear-both container mx-auto px-4 sectionMargin">
    <div class="w-full">
        <div class="inline-flex justify-start flex-grow float-left mr-4 mb-4">
        <a href="/{{ type.buttonUrl }}" class="circularBtn rotate-again dark">{{ type.button | safe }}</a>
    </div>
        <div class="flex flex-row-reverse items-center gap-x-4 flex-grow">
            <div class="hidden h-0.5 min-w-[10ch] w-auto bg-lead opacity-30 md:inline-block"></div>
            <h2 class="m-0 text-right">{{ type.content.subHeading | safe }}</h2>
        </div>
        {% for type in type.content.items -%}

        {% if type.type == "imageList" %}

        <ul class="flex flex-wrap justify-end list-none gap-4 mt-12 noPadding">
        {% for image in type.images -%}
            <li class="h-10 inline">
                <img class="h-10 w-auto" height="100%" src="{{ image.image | safe }}" alt="{{ image.imageAlt | safe }}">
            </li>
         {% endfor -%}
        </div>

        {% endif %}

                {% if type.type == "text" %}

               <div class="mt-8 max-w-[70ch] text-right">{{ type.text | markdownify | safe }}</div>

        {% endif %}

        {% endfor -%}
    </div>
</section>

{% else %}

<section class="clear-both container mx-auto px-4 sectionMargin flex justify-between flex-wrap gap-x-24 gap-y-4 flex-row-reverse">
    <div class="w-full">
        <div class="inline-flex justify-start flex-grow float-right ml-4 mb-4">
        <a href="/{{ type.buttonUrl }}" class="circularBtn dark">{{ type.button | safe }}</a>
    </div>
        <div class="flex items-center gap-x-4 flex-grow">
            <div class="hidden h-0.5 min-w-[10ch] w-auto bg-lead opacity-30 md:inline-block"></div>
            <h2 class="m-0 {{ 'text-right' if type.content.flip == 'true' }}">{{ type.content.subHeading | safe }}</h2>
        </div>
        {% for type in type.content.items -%}

        {% if type.type == "imageList" %}

        <ul class="flex flex-wrap list-none gap-4 mt-12 noPadding">
        {% for image in type.images -%}
            <li class="h-10 inline">
                <img class="w-full h-full" width="100%" height="100%" src="{{ image.image | safe }}" alt="{{ image.imageAlt | safe }}">
            </li>
         {% endfor -%}
        </div>

        {% endif %}

                {% if type.type == "text" %}

               <div class="mt-8 max-w-[70ch] {{ 'text-right' if type.content.flip == 'true' }}">{{ type.text | markdownify | safe }}</div>

        {% endif %}

        {% endfor -%}
    </div>
</section>

{% endif%}