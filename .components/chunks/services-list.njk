<section class="container mx-auto px-4 sectionMargin clear-both">
      {% if type.heading %}
          <div class="mx-auto px-4 mb-12">
        <h1 class="text-center">{{ type.heading | safe }}</h1>
            </div>
      {% endif %}
    <div class="flex flex-col lg:flex-row justify-between">
        <ul class="services no-list">
        {% for item in type.services %}
        <li class="mb-24 relative">
                <img class="servicesIcon" src="{{ item.serviceIcon.serviceIconImg | safe }}" alt="{{ item.serviceIcon.serviceIconAlt | safe }}">
                <h2 class="">{{ item.serviceName | safe }}</h2>
                <p class="max-w-[50ch]">
                    {{ item.serviceDesc | safe }}
                </p>
            </li>
        {% endfor %}
        </ul>
        {% if type.button %}
        <div class="inline-flex justify-end items-end mt-12">
            <a href="/{{ type.buttonUrl | safe }}" class="lg:mb-12 circularBtn dark rotate">{{ type.button | safe }}</a>
        </div>
      {% endif %}
    </div>
</section>