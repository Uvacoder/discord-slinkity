<section class="bg-lead clear-both">
    <div
        class="sm:max-w-[80vw] md:max-w-[80vw] lg:max-w-[70vw] xl:max-w-[70vw] mx-auto px-4 sectionMargin clear-both pt-8 pb-8 lg:pt-12 lg:pb-12 overflow-hidden flex flex-col {{ 'md:flex-row' if type.flip == false }} {{ 'md:flex-row-reverse' if type.flip == true }} gap-4 items-center">
{% if type.image.image %}
            <figure class="w-5/6 mx-auto md:w-1/3 flex-shrink-0">
            <img src="{{ type.image.image }}" alt="{{ type.image.imageAlt }}">
            {% if type.image.caption %}
                            <figcaption>
                <p class="text-ivory text-sm tracking-tight leading-none mt-2 {{ 'md:text-right' if type.flip == true }}">
                    {{ type.image.caption | safe }}</p>
            </figcaption>
            {% endif %}
        </figure>
{% endif %}
{% if type.text %}
            <div class="w-auto flex-grow text-ivory px-4">
            {{ type.text | markdownify | safe }}
        </div>
{% endif %}
{% if type.imageList %}

        <ul class="flex flex-wrap list-none gap-4 mt-12 noPadding">
        {% for image in type.images -%}
            <li class="h-10 inline">
                <img class="w-full h-full" width="100%" height="100%" src="{{ image.image | safe }}" alt="{{ image.imageAlt | safe }}">
            </li>
         {% endfor -%}
        </div>

        {% endif %}
    </div>
</section>