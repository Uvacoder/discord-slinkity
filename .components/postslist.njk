	<section>
	{% for post in postslist | reverse %}
	<article class="postList" {% if post.url==url %} data-current="current item" {% endif %}>
		<h2>
			<a class="link" href="{{ post.url | url }}">
				{% if post.data.title %}
				{{ post.data.title }}
				{% else %}
				Untitled
				{% endif %}
			</a>
		</h2>
		{% if post.data.summary %}
		<p class="summary">
			{{ post.data.summary }}
		</p>
		{% endif %}
		<p class="info">
			<time datetime="{{ post.date | machineDate }}">
				{{ post.date | readableDate }} by <a class="link" href="/authors/{{ post.data.author | slug }}/">{{
					post.data.author }}</a>
			</time>
		</p>
		{% if post.data.tags %}
		<p>
			{% for tag in post.data.tags %}
			{%- if tag != "post" -%}
			{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			<a class="link" id="important-link" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			{%- endif -%}
			{% endfor %}
		</p>
		{% endif %}
	</article>
	{% endfor %}
</section>