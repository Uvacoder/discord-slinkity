<div id="navModal" class="h-screen overflow-auto w-full bg-ivory fixed z-20 pt-20 hidden">
  <div class="container px-8 md:px-20 lg:px-32 flex flex-row flex-wrap gap-x-24 mt-16 lg:mt-24">
    <ul id="modalLinks">
      {% for link in nav.navLinks -%}
      <li>
        <a class="text-lead leading-none inline-block" href="{{ link.url }}">
          <h1>{{ link.displayText }}</h1>
        </a>
      </li>
      {% endfor -%}
    </ul>
    <div class="flex flex-col gap-y-8 mt-8">
      <div class="inline-block">
        <a href="/contact" class="primaryBtn dark">Contact us</a>
      </div>
      <div class="inline-block">
        <a href="/careers" class="circularBtn dark">We are hiring!</a>
      </div>
    </div>
  </div>
</div>



<style>
  #navModal {
    opacity: 0;
    transition: opacity 150ms cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .opened #navModal {
    opacity: 1;
    pointer-events: all;
  }

  .opened {
    overflow-y: hidden;
  }

  #modalLinks li {
    opacity: 0;
    transform: translateY(.5em);
  }

  .opened #modalLinks li {
    animation: fade-in-modal 200ms forwards;

  }

  .opened #modalLinks li:nth-child(1) {
    animation-delay: 100ms;
  }

  .opened #modalLinks li:nth-child(2) {
    animation-delay: 200ms;
  }

  .opened #modalLinks li:nth-child(3) {
    animation-delay: 300ms;
  }

  @keyframes fade-in-modal {
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>