---
title: Author archive
layout: base.njk
pagination:
  data: collections.authors
  size: 1
  alias: author
permalink: "authors/{{ author | slug }}/"
renderData:
  author: "{{ author }}"
  title: "Posts by {{ author }}"
  metaDescription: "An archive of all posts by the author: {{ author }}."
---

<h1>{{ renderData.title | safe }}</h1>

<section>
	{% for post in collections.authors[author] | reverse %}
		<article{% if post.page.url == url %} data-current="current item"{% endif %}>
			<h2>
			<a class="link" href="{{ post.url | url }}">
				{% if post.title %}
				{{ post.title }}
				{% else %}
				Untitled
				{% endif %}
			</a>
		</h2>
			{% if post.summary %}
		<p class="summary">
			{{ post.summary }}
		</p>
		{% endif %}
			<p class="info">
			<time datetime="{{ post.date | machineDate }}">
				{{ post.date | readableDate }} by <a class="link" href="/authors/{{ post.author | slug }}/">{{
					post.author }}</a>
			</time>
		</p>
			{% if post.tags %}
		<p>
			{% for tag in post.tags %}
			{%- if tag != "post" -%}
			{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			<a class="link tag" id="important-link" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			{%- endif -%}
			{% endfor %}
		</p>
		{% endif %}
		</article>
	{% endfor %}
  <nav>
    <a class="link" href="{{ '/authors/' | url }}">‚Üê See Authors</a>
  </nav>
</section>